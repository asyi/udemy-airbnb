<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

    <h2>Join</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :firstname, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "First name" %>
      </div>

      <div class="form-group">
        <%= f.text_field :lastname, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Last name" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "jane@gmail.com" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Create a password" %>
      </div>

      <div class="actions">
        <%= f.submit "Join", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
